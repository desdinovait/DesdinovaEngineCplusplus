//////////////////////////////////////////////////////////////
// Variables
//////////////////////////////////////////////////////////////
float4		wireColor;


//////////////////////////////////////////////////////////////
// Structures
//////////////////////////////////////////////////////////////
//Application to vertex shader
struct A2V_Wireframe
{ 
	float4 Pos	: POSITION;
	float4 Color    : COLOR0;    // vertex diffuse color
};

//Vertex shader to pixel shader
struct V2P_Wireframe
{
	float4 Pos   : POSITION;
	float4 Color : COLOR0;
};


//////////////////////////////////////////////////////////////
// VS and PS Shaders
//////////////////////////////////////////////////////////////
void VS_Wireframe( in A2V_Wireframe IN, out V2P_Wireframe OUT) 
{
	OUT.Pos	= mul( IN.Pos, matWorldViewProj );
	OUT.Color = wireColor;
}

float4 PS_Wireframe( in V2P_Wireframe IN) : COLOR
{
	return IN.Color;
}


//////////////////////////////////////////////////////////////
//Techniques
//////////////////////////////////////////////////////////////
technique Wireframe
{
	pass P0
	{
		VertexShader = compile vs_1_0 VS_Wireframe();
		PixelShader  = compile ps_1_0 PS_Wireframe();
	}
}
